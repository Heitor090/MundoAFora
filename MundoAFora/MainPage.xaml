<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MundoAFora.MainPage"
             BackgroundColor="{StaticResource Cotton}">


    <VerticalStackLayout Padding="16" Spacing="12">
        <Border Stroke="Black" StrokeShape="20" WidthRequest="1870" HeightRequest="100">
        <Grid ColumnDefinitions="*,*,*,*,*,*" RowDefinitions="Auto" BackgroundColor="{StaticResource GreenFlag}" HeightRequest="100" Margin="0,0,0,0"  >
        
        <Image Source="logo_sem_fundo.png"  Margin="0,0,150,300" HorizontalOptions="Center"/>
            <Label Grid.Column="0" Grid.Row="0"  Text="MUNDO A FORA" FontSize="18" FontAttributes="Bold" Margin="0,35,0,0" HorizontalOptions="End"/>







        </Grid>
        </Border>
    </VerticalStackLayout>
    
       

</ContentPage>
